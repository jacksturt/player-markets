model Order {
    id        String   @id @default(cuid())
    signature String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    status         OrderStatus @default(PENDING)
    type           OrderType
    isBid          Boolean
    price          Decimal
    numBaseTokens  Int
    numQuoteTokens Int
    sequenceNumber Int?
    clientOrderId  Int         @default(0)

    baseMint   Mint   @relation(fields: [baseMintId], references: [id])
    baseMintId String

    user     User   @relation(fields: [userId], references: [id])
    userId   String
    market   Market @relation(fields: [marketId], references: [id])
    marketId String

    buyTrade   Trade?  @relation("buyOrder")
    buyTradeId String?

    sellTrade   Trade?  @relation("sellOrder")
    sellTradeId String?

    @@unique([marketId, sequenceNumber, userId, price, type, isBid, numBaseTokens, numQuoteTokens])
}

enum OrderStatus {
    PENDING
    COMPLETED
    CANCELLED
}

enum OrderType {
    LIMIT
    IOC
    POST_ONLY
    GLOBAL
}
